extends _layout

block content
    h4 Editing #{user.username}'s bio:
    if bio in user
        h6 Current bio:
        p= user.bio
    
    form#form
        label.form-label(for='bio') Enter your new bio here:
        textarea#bio.form-control(rows='5')
        button#submission.btn.btn-primary(type='submit') Submit

block scripts
    script(src='/edit-bio.js')