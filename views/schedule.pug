extends _layout

block content
    each week in schedule
        h4 Round #{week.week}: #{week.dates[0]} to #{week.dates[1]}
        .table-responsive: table.table.table-striped.w-100.text-center
            thead: tr: .row
                th.col-5 Away
                th.col-2 vs.
                th.col-5 Home
            tbody
                each matchup in week.matchups
                    tr: .row
                        td.col-5= matchup.away
                        td.col-2 vs.
                        td.col-5= matchup.home