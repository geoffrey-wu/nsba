doctype html
html
    head
        meta(charset='UTF-8')
        title=title
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
    body
        nav.navbar.navbar-expand-lg.navbar-light.bg-light
            .container-fluid
                a.navbar-brand.ms-2(href='/') NSBA
                button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                #navbarSupportedContent.collapse.navbar-collapse
                    block navbar
                        ul#nav-main-content.navbar-nav.mb-2.mb-lg-0
                            li.nav-item.dropdown
                                a#tournamentDropdown.nav-link.dropdown-toggle(href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false") Tournament
                                ul.dropdown-menu(aria-labelledby="tournamentDropdown")
                                    li: a.dropdown-item(href='/players/') Players
                                    li: a.dropdown-item(href='/gm/') GMs
                                    li: a.dropdown-item(href='/teams/') Teams
                            li.nav-item.dropdown
                                a#tournamentDropdown.nav-link.dropdown-toggle(href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false") Spectator
                                ul.dropdown-menu(aria-labelledby="tournamentDropdown")
                                    li: a.dropdown-item(href='/results/') Results
                                    li: a.dropdown-item(href='/vods/') VODs
                                    li: a.dropdown-item(href='/videos/') Videos
                                    li: a.dropdown-item(href='/pickem/') Pick'em
                            li.nav-item: a.nav-link(href='/draft/') Draft
                            li.nav-item: a.nav-link(href='/staff/') Staff
                        ul.navbar-nav.ms-auto.me-2.mb-2.mb-lg-0
                            li.nav-item: a.nav-link(href=`/${username ? 'profile' : 'login'}/`) #{username ? username : 'Login'}
        .container-lg.mt-3.mb-5
            block content

        block scripts
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p' crossorigin='anonymous')
