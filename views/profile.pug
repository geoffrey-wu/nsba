extends _layout

block content
    .row.mb-3
        .col-12.col-md-5
            img.img-fluid(src='/logo.png')
            .text-center
                button.mt-1.btn.btn-secondary.disabled Upload profile picture
        .col-12.col-md-7
            p: h1
                | Welcome,
                span= ' ' + user.username + '!'
            p
                strong Name:
                = ' ' + user.firstName + ' ' + user.lastName
            p
                strong Email:
                = ' ' + user.email
            p
                strong Discord:
                = ' ' + user.discord
            p
                strong Role:
                if role
                    = ' ' + role
                else
                    = ' N/A'
            p
                strong Team:
                if team in user
                    = ' ' + user.team
                else
                    = ' N/A'
        
            a.btn.btn-primary.me-2(href=`/edit-profile/${user.username}/`) Edit profile
            button.btn.btn-primary(type='button' onclick='logout()') Logout

    h2 Bio 
    p= user.bio ? user.bio : 'No bio set.'
    
    p: a.btn.btn-primary.me-2(href=`/edit-bio/${user.username}/`) Edit bio
    
    h2 My Team
    if team in user
        p= user.team
    else
        p Looks like you're not part of a team yet.

block scripts
    script(src='/profile.js')